# WiFi Desk Plumbus Environment Configuration
# Copy this file to .env and customize for your setup

# Flask Configuration
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Security
SECRET_KEY=change-this-to-a-random-secret-key-for-production
WEB_PASSWORD=plumbus123

# WiFi Settings
WIFI_INTERFACE=wlan0
SCAN_INTERVAL=5

# Database
DATABASE_PATH=data/tracker.db
DATA_RETENTION_DAYS=90

# Fingerprinting
SIMILARITY_THRESHOLD=0.85
MIN_SSIDS_FOR_FINGERPRINT=3

# Location Detection
LOCATION_SIMILARITY_THRESHOLD=0.70
MIN_BSSIDS_FOR_LOCATION=5

# Following Detection
ALERT_LOCATION_COUNT=3
CORRELATION_THRESHOLD=0.75
ALERT_TIME_WINDOW=1800

# WebSocket
WEBSOCKET_UPDATE_INTERVAL=2
SOCKETIO_ASYNC_MODE=eventlet
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/plumbus.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
